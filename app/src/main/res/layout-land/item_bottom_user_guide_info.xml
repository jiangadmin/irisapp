<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--android:background="#f4f8fb"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/y12"
            android:background="@drawable/shape_round_user_guide" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x12"
            android:text="将手机举至与眼睛齐平，调整与眼睛的距离，并保证双眼在圆圈范围内。"
            android:textColor="#999999"
            android:textSize="@dimen/x33" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y48"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/y12"
            android:background="@drawable/shape_round_user_guide" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x12"
            android:text="眼镜或隐形眼镜会影响识别，摘掉眼镜可取得更好的效果。"
            android:textColor="#999999"
            android:textSize="@dimen/x33" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y48"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/y12"
            android:background="@drawable/shape_round_user_guide" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x12"
            android:text="使用过程中避免阳光直射。"
            android:textColor="#999999"
            android:textSize="@dimen/x33" />
    </LinearLayout>
</LinearLayout>