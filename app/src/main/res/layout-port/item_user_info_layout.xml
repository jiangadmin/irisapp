<?xml version="1.0" encoding="utf-8"?>
<com.irisking.scanner.view.custom.PlayingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/y160"
	android:layout_gravity="center_horizontal"
	android:background="@drawable/card_background"
	android:id="@+id/rootLayout">
	<!--android:background="?android:attr/selectableItemBackground"-->
	<!--android:background="@drawable/card_background_selector"-->

	<ImageView
		android:id="@+id/item_iv_user_favicon"
		android:layout_width="@dimen/x100"
		android:layout_height="@dimen/y100"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/x50"
		android:adjustViewBounds="true"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_user1_icon" />

	<TextView
		android:id="@+id/item_tv_user_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/x30"
		android:layout_toRightOf="@+id/item_iv_user_favicon"
		android:ellipsize="end"
		android:lines="1"
		android:textColor="#333333"
		android:textSize="@dimen/x60" />

	<LinearLayout
		android:id="@+id/ll_item_iv_delete_user_info"
		android:layout_width="@dimen/x120"
		android:layout_height="@dimen/y120"
		android:layout_centerVertical="true"
		android:layout_marginRight="@dimen/x2"
		android:layout_toLeftOf="@+id/ll_item_iv_rename_user_info"
		android:gravity="center">

		<ImageView
			android:id="@+id/item_iv_delete_user_info"
			android:layout_width="@dimen/x34"
			android:layout_height="@dimen/y34"
			android:layout_gravity="center"
			android:adjustViewBounds="true"
			android:scaleType="fitCenter"
			android:src="@drawable/selector_delete_button" />
	</LinearLayout>


	<LinearLayout
		android:id="@+id/ll_item_iv_rename_user_info"
		android:layout_width="@dimen/x120"
		android:layout_height="@dimen/y120"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="@dimen/x10"
		android:gravity="center">

		<ImageView
			android:id="@+id/item_iv_rename_user_info"
			android:layout_width="@dimen/x36"
			android:layout_height="@dimen/y36"
			android:layout_gravity="center"
			android:adjustViewBounds="true"
			android:scaleType="fitCenter"
			android:src="@drawable/selector_rename_button" />
	</LinearLayout>
</com.irisking.scanner.view.custom.PlayingRelativeLayout>