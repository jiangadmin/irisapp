<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x800"
    android:layout_height="@dimen/y300"
    android:background="#ffffff">
    
    <EditText
        android:id="@+id/ed_userName"
        android:layout_width="@dimen/x660"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/y74"
        android:layout_centerInParent="true"
        android:padding="@dimen/y8"
        android:background="@drawable/selector_edit_text_background"
        android:hint="请输入用户名"
        android:singleLine="true"
        android:textSize="@dimen/x44"
        android:textColor="#333333"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y40"
        android:layout_marginRight="@dimen/x86"
        android:layout_toLeftOf="@+id/btn_confirm"
        android:text="取消"
        android:textColor="#7ecef4"
        android:textSize="@dimen/x36"
        android:background="#00000000" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y40"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x40"
        android:text="确定"
        android:textColor="#7ecef4"
        android:textSize="@dimen/x36"
        android:background="#00000000" />
</RelativeLayout>

