<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x800"
    android:layout_height="@dimen/y300"
    android:background="#ffffff">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x70"
        android:layout_marginLeft="@dimen/x75"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="#333333"
        android:textSize="@dimen/x44" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y40"
        android:layout_marginRight="@dimen/x86"
        android:layout_toLeftOf="@+id/btn_delete"
        android:text="取消"
        android:textColor="#7ecef4"
        android:textSize="@dimen/x36"
        android:background="#00000000"/>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y40"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x36"
        android:text="删除"
        android:textColor="#7ecef4"
        android:textSize="@dimen/x34"
        android:background="#00000000"/>
</RelativeLayout>